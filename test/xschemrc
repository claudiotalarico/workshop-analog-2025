## Source the PDK xschemrc file
source $env(PDK_ROOT)/$env(PDK)/libs.tech/xschem/xschemrc

## Set the netlists and the simulations to be the current directory
set netlist_dir $env(PWD)

## Set the netlist and the simulations to be ./netlist
#set netlist_dir [file dirname [info script]]/netlist

## Set the netlists and simulations to go into a simulation/ folder 
## inside the directory containing the top level schematic.
#set local_netlist_dir 1

## Show netlist after netlist command
set netlist_show 1

## Add local directory to library
append XSCHEM_LIBRARY_PATH :[file dirname [info script]]
